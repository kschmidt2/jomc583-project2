<!DOCTYPE html>
<html>
    <head>
        <title><%= post.title%></title>

        <link rel="stylesheet" href="/css/bootstrap.css" />
        <link rel="stylesheet" href="/css/main.css" />
        <link href='https://fonts.googleapis.com/css?family=Roboto:400,700,300,400italic' rel='stylesheet' type='text/css'>

    </head>
    <body>

      <div class="container">

        <a href="/posts"><div id="logo"></div></a>

        <div id="blog_post">
          <h3><%= post.category %></h3>
          <h1><%= post.title %></h1>
          <h2>By <%= post.author %> | <%= post.date %></h2>
          <div class="image"><img src="<%= post.image %>" class="img-responsive"></div>
          <div class="content"><%= post.content %></div>


          <div class="button delete" data-toggle="modal" data-target="#myModal">Delete post</div>
          <div class="button" id="edit">Edit post</div>

          <div class="modal bs-example-modal-sm" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-sm" role="document">
              <div class="modal-content">
                <div class="modal-body">
                  Are you sure you want to delete this post?<br />
                  <div class="button delete delete_box"><a href="/posts/delete/<%= post.title %>">Yes, delete</a></div>
                  <div class="button go_back" data-dismiss="modal">No, go back</div>
                </div>
              </div>
            </div>
          </div>

        </div>



        <div id="edit_post">
          <form action="/posts/<%= post.title %>" method="POST">
            <div class="form-group">

              <p>
              <label>Title</label>
              <input type="text" id="title" name="title" value="<%= post.title %>" class="form-control" />
              </p>

              <p>
              <label>Author</label>
              <input type="text" id="author" name="author" value="<%= post.author %>" class="form-control"/>
              </p>

              <p>
              <label>Category</label>
              <input type="text" id="category" name="category" value="<%= post.category %>" class="form-control"/>
              </p>

              <p>
              <label>Content</label>
              <textarea type="text" id="content" name="content" class="form-control" rows="10"/><%= post.content %></textarea>
              </p>

              <p>
              <label>Image</label>
              <input type="url" id="image" name="image" value="<%= post.image %>" class="form-control"/>
              </p>

              <p>
              <label>Created Date</label>
              <input type="date" id="date" name="date" value="<%= post.date %>" class="form-control date_picker"/>
              </p>

              <button class="btn"><div class="button update">Update</div></button>

            </div>



          </form>
        </div>

      </div>



      <script type="text/javascript" src="/js/jquery.min.js"></script>
      <script type="text/javascript" src="/js/bootstrap.min.js"></script>
      <script type="text/javascript" src="/js/main.js"></script>

    </body>
</html>
